<header id="header">
  <div class="c">
    <div class="holder">
      <strong class="logo short-logo">
        <a href="/"><img src="images/logo.gif" class="img-responsive"></a>
        <span><%= @city.city %> / <%= @city.country %></span>
      </strong>
      <form action="" role="form" class="select-form">
        <fieldset>
          <label for="select-beast" class="sr-only">Country:</label>
          <select id="select-country">
            <option value="" disabled selected>Select country...</option>
              <% @countries.each do |country| %>
                <option value="<%= country %>"><%= country %></option>
            <% end %>
          </select>
          <label for="select-beast" class="sr-only">City:</label>
          <select id="select-city">
            <option value="">Pick a city...</option>
          </select>
        </fieldset>
      </form><!-- / select-form -->
      <span id="toggle-search" class="icon-search"></span>
    </div>
  </div>
</header><!-- / header -->
<section class="section" id="gallery">
  <div class="wrapper">
    <div class="holder">
      <h1><%= @city.city %> / <span><%= @city.country %></span></h1>
      <div id="photos-panoramio"></div>
    </div>
  </div>
</section><!-- / gallery section -->
<section class="section" id="about">
  <div class="wrapper">
    <div class="holder">
      <h2>Info About <%= @city.city %>:</h2>
      <div class="hold">
        <article>
          <p><%= truncate_html(@city.description, length: 1300, omission: '...').html_safe %><small>* material from wiki</small></p>
          <%= link_to "Read full Wiki article", "http://en.wikipedia.org/wiki?curid=" + @city.wiki_page_id.to_s, :target => "_blank", :class => "btn" %>
        </article>
        <aside class="map-holder">
          <div id="map_canvas">
            <%= image_tag(@staticmap_url) %>
          </div>
        </aside>
        <%= link_to "go to Google maps", "http://maps.google.com/?q=#{@city.latitude.to_s},#{@city.longitude.to_s}", :target => "_blank", :class => 'maps-tip' %>
      </div>
    </div>
  </div>
</section><!-- / about section -->

